<h1>Status#index</h1>
<p>Find me in app/views/status/index.html.erb</p>

<%= form_with method: :patch, url: update_status_status_index_path, local: true do |form| %>
  <select id="name" name="name[status]">
    <option value=""></option>
    <option value="0">personal leave</option>
    <option value="1">sick leave</option>
    <option value="2">sickness</option>
    <option value="3">accident</option>
  </select>

  <p>
    <%= form.label :detail %><br>
    <%= form.text_area :detail %>
  </p>

  <p>
    <%= form.submit "submit", class: "btn btn-default", data: { confirm: 'Your confirm message' } %>
  </p>
<% end %>
<%= link_to "Back", :back %>