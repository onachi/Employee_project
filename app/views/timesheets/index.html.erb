<h1>Status index</h1>
<p>Find me in app/views/status/index.html.erb</p>

<%= form_with method: :patch, url: update_status_timesheets_path, local: true do |form| %>

  <%
    options = [
        ['personal leave', 0],
        ['sick leave', 1],
        ['sickness', 2],
        ['accident', 3]
    ]
  %>
  <%= form.select :status, options, include_blank: true %>

  <p>
    <%= form.label :detail %><br>
    <%= form.text_area :detail %>
  </p>
  <p>
    <%= form.date_select :review_date %>
  </p>

  <p>
    <%= form.submit "submit", class: "btn btn-default", data: { confirm: 'Your confirm message' } %>
  </p>

<% end %>
<%= link_to "Back", :back %>